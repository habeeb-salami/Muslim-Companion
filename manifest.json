{
  "manifest_version": 3,
  "name": "Muslim Companion",
  "version": "1.0.0",
  "description": "Lightweight, privacy-first Islamic tools: prayer times, Qibla, Quran/Hadith, Hijri calendar.",
  "action": {
    "default_title": "Muslim Companion",
    "default_popup": "./src/home.html"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "geolocation"
  ],
  "background": {
    "service_worker": "./src/js/background.js"
  },
  "options_page": "options/index.html",
  "icons": {
    "16": "/src/images/ramadan-16x16.png",
    "48": "/src/images/ramadan-48x48.png",
    "128": "/src/images/ramadan-128x128.png"
  },
  "host_permissions": [
    "https://api.quran.com/*"
  ],
  
  "minimum_chrome_version": "112"
}